# =====================================================
# OURSYNTH PLATFORM - SUPABASE CONFIGURATION
# =====================================================
# Copy this file to .env.local in each app directory and fill in your Supabase credentials

# Supabase Configuration
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Database Configuration  
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:7071

# AI Provider Settings (for Pathways App)
OPENAI_API_KEY=your-openai-key-here
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-key

# Stripe Configuration (for billing)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Domain Registration API (for Domains App)
DOMAIN_API_KEY=your-domain-registrar-api-key
DOMAIN_API_ENDPOINT=your-domain-registrar-endpoint

# Azure Deployment (for Deploy App)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
