{
  "name": "oursynth-platform",
  "version": "1.0.0",
  "description": "OurSynth Platform - Unified development environment",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "dev:studio": "turbo run dev --filter=studio",
    "dev:pathways": "turbo run dev --filter=pathways",
    "dev:deploy": "turbo run dev --filter=deploy",
    "dev:domains": "turbo run dev --filter=domains"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
