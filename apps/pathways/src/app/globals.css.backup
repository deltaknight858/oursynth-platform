}

@keyframes purpleGlowPulse {
  0% { box-shadow: 0 0 5px rgba(170, 99, 255, 0.3); }
  50% { box-shadow: 0 0 20px rgba(170, 99, 255, 0.6), 0 0 40px rgba(170, 99, 255, 0.3); }
  100% { box-shadow: 0 0 5px rgba(170, 99, 255, 0.3); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.05); opacity: 0.8; }
  100% { transform: scale(1); opacity: 1; }
}

@keyframes neonPulse {
  0% {
    box-shadow: 
      0 0 20px rgba(59, 130, 246, 0.4),
      0 0 40px rgba(59, 130, 246, 0.2),
      0 0 60px rgba(59, 130, 246, 0.1);
  }
  100% {
    box-shadow: 
      0 0 30px rgba(59, 130, 246, 0.6),
      0 0 60px rgba(59, 130, 246, 0.4),
      0 0 90px rgba(59, 130, 246, 0.2);
  }
}

@keyframes ambientGlow {
  0%, 100% { 
    background-position: 0% 50%;
    filter: brightness(1) blur(0px);
  }
  50% { 
    background-position: 100% 50%;
    filter: brightness(1.05) blur(0.5px);
  }
}

@keyframes neonFlow {
  0% {
    background-position: 0% 0%;
  }
  50% {
    background-position: 100% 100%;
  }
  100% {
    background-position: 0% 0%;
  }
}

@keyframes borderGlow {
  0% { box-shadow: 0 0 0px rgba(132, 255, 99, 0); }
  50% { box-shadow: 0 0 15px rgba(132, 255, 99, 0.5), 0 0 30px rgba(132, 255, 99, 0.3); }
  100% { box-shadow: 0 0 0px rgba(132, 255, 99, 0); }
}

@keyframes tiltHover {
  0% { transform: perspective(1000px) rotateX(0) rotateY(0); }
  100% { transform: perspective(1000px) rotateX(2deg) rotateY(2deg); }
}

@keyframes sparkle {
  0%, 100% { opacity: 0; transform: scale(0); }
  50% { opacity: 1; transform: scale(1); }
}

@keyframes ripple {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(2); opacity: 0; }
}

@keyframes wizardSpell {
  0% { 
    transform: scale(1) rotate(0deg);
    -webkit-filter: hue-rotate(0deg);
    filter: hue-rotate(0deg);
  }
  25% { 
    transform: scale(1.05) rotate(90deg);
    -webkit-filter: hue-rotate(90deg);
    filter: hue-rotate(90deg);
  }
  50% { 
    transform: scale(1.1) rotate(180deg);
    -webkit-filter: hue-rotate(180deg);
    filter: hue-rotate(180deg);
  }
  75% { 
    transform: scale(1.05) rotate(270deg);
    -webkit-filter: hue-rotate(270deg);
    filter: hue-rotate(270deg);
  }
  100% { 
    transform: scale(1) rotate(360deg);
    -webkit-filter: hue-rotate(360deg);
    filter: hue-rotate(360deg);
  }
}

@keyframes magicalParticles {
  0% { 
    opacity: 0;
    transform: translateY(20px) scale(0);
  }
  50% { 
    opacity: 1;
    transform: translateY(-10px) scale(1);
  }
  100% { 
    opacity: 0;
    transform: translateY(-40px) scale(0);
  }
}

.data-node {
  animation: dataNodePulse 4s infinite ease-in-out;
}

.data-flow {
  background: linear-gradient(90deg, 
    rgba(132, 255, 99, 0), 
    rgba(132, 255, 99, 0.2), 
    rgba(132, 255, 99, 0));
  background-size: 200% 200%;
  animation: dataNodeFlow 8s infinite linear;
}

.purple-flow {
  background: linear-gradient(90deg, 
    rgba(170, 99, 255, 0), 
    rgba(170, 99, 255, 0.2), 
    rgba(170, 99, 255, 0));
  background-size: 200% 200%;
  animation: dataNodeFlow 8s infinite linear;
}

.float-animation {
  animation: floatAnimation 6s ease-in-out infinite;
  transition: transform 0.3s ease;
}

.float-animation:hover {
  animation-play-state: paused;
  transform: translateY(-10px) scale(1.02);
}

.fade-in-up {
  animation: fadeInUp 0.8s ease-out forwards;
}

.glass-morphism {
  background: rgba(255, 255, 255, 0.7);
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 
    0 8px 32px 0 rgba(31, 38, 135, 0.1),
    inset 0 0 0 1px rgba(255, 255, 255, 0.4);
}

.dark .glass-morphism {
  background: rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 
    0 8px 32px 0 rgba(0, 0, 0, 0.3),
    inset 0 0 0 1px rgba(255, 255, 255, 0.1);
}

.wizard-spell {
  animation: wizardSpell 5s ease-in-out infinite;
}

.magical-particles::before {
  content: 'âœ¨';
  position: absolute;
  animation: magicalParticles 3s ease-in-out infinite;
}

.wizard-glow {
  text-shadow: 
    0 0 10px rgba(170, 99, 255, 0.8),
    0 0 20px rgba(170, 99, 255, 0.6),
    0 0 30px rgba(132, 255, 99, 0.4);
  color: #AA63FF;
  font-weight: 600;
}

