{
    "azureFunctions.deploySubpath": "apps\\api\\Application",
    "azureFunctions.scmDoBuildDuringDeployment": true,
    "azureFunctions.pythonVenv": ".venv",
    "azureFunctions.projectLanguage": "Python",
    "azureFunctions.projectRuntime": "~4",
    "debug.internalConsoleOptions": "neverOpen",
    "eslint.workingDirectories": [
        "apps/pathways",
        "apps/studio", 
        "apps/deploy",
        "apps/domains"
    ],
    "eslint.options": {
        "cache": true,
        "cacheStrategy": "content"
    },
    "eslint.lintTask.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.next": true,
        "**/.turbo": true,
        "**/dist": true,
        "**/build": true,
        "**/coverage": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.next": true,
        "**/.turbo": true,
        "**/dist": true,
        "**/build": true
    }
}