@layer utilities {
  /* Subtle animations */
  @keyframes subtleFlicker {
    0%, 100% { 
      border-color: rgba(0, 212, 255, 0.15);
      box-shadow: 0 0 1px rgba(0, 212, 255, 0.2);
    }
    50% { 
      border-color: rgba(0, 212, 255, 0.25);
      box-shadow: 0 0 3px rgba(0, 212, 255, 0.3);
    }
  }

  .floaty {
    animation: floaty 4s ease-in-out infinite;
  }

  .flicker {
    animation: subtleFlicker 3s ease-in-out infinite;
  }

  @keyframes electricTextGlow {
    0% { 
      text-shadow: 
        0 0 5px rgba(0, 212, 255, 0.8),
        0 0 10px rgba(0, 212, 255, 0.6),
        0 0 20px rgba(0, 212, 255, 0.4);
    }
    100% { 
      text-shadow: 
        0 0 10px rgba(0, 212, 255, 1),
        0 0 20px rgba(0, 212, 255, 0.8),
        0 0 40px rgba(0, 212, 255, 0.6);
    }
  }

  @keyframes electricBorderPulse {
    0% { opacity: 0.5; }
    100% { opacity: 1; }
  }

  @keyframes electricGlow {
    0% { 
      box-shadow: 
        0 0 20px rgba(0, 212, 255, 0.2),
        0 0 40px rgba(0, 212, 255, 0.1);
    }
    100% { 
      box-shadow: 
        0 0 30px rgba(0, 212, 255, 0.4),
        0 0 60px rgba(0, 212, 255, 0.3),
        0 0 80px rgba(255, 0, 110, 0.1);
    }
  }

  @keyframes electricBorderFlow {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @keyframes electricFlow {
    0% { 
      background-position: 0% 50%;
      filter: hue-rotate(0deg);
    }
    50% { 
      background-position: 100% 50%;
      filter: hue-rotate(120deg);
    }
    100% { 
      background-position: 0% 50%;
      filter: hue-rotate(240deg);
    }
  }

  @keyframes floaty {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-3px); }
    100% { transform: translateY(0px); }
  }

  .floaty {
    animation: floaty 4s ease-in-out infinite;
  }

  .flicker {
    animation: electricFlicker 2s ease-in-out infinite;
  }
}

@layer utilities {
  @keyframes flicker {
    0%, 19%, 21%, 23%, 80%, 100% { opacity: 1; }
    20%, 22% { opacity: 0.4; }
  }

  @keyframes underline {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
  }

  @keyframes floaty {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-2px); }
    100% { transform: translateY(0px); }
  }

  .flicker {
    animation: flicker 2.4s infinite;
  }

  .underline-in {
    transform-origin: left;
    animation: underline 400ms ease forwards;
  }

  .floaty {
    animation: floaty 6s ease-in-out infinite;
  }
}

/* Reset and override default browser styles */
* {
